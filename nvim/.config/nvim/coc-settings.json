{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    }
  },
  "yaml": {
    "schemaStore": {
      "enable": "true"
    },
    "schemas": {
      "kubernetes": "/*.yaml",
      "http://json.schemastore.org/gitlab-ci": "/.gitlab-ci.yml"
    }
  }
}
